{% extends 'layout.njk' %}

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock head %}

{% block content %}
<section>
  <div class="recipes-container">
    {% for recipes in recipes %}
      <div class="card-recipe">
        <a href='/recipe/{{recipes.id}}'><img src="{{recipes.image}}" alt="{{recipes.title}}"></a>
        <h3>{{recipes.title}}</h3>
        <p>por {{recipes.author}}</p>
      </div>
    {% endfor %}
  </div>
</section>
{% endblock content %}