<div class="item">
  <div>Nome do autor</div>
  <div>
    <input type="text" name="author" placeholder='Nome e Sobrenome'>
  </div>
</div>

<div class="item">
  <div>Nome da receita</div>
  <div>
    <input type="text" name="title" placeholder='Nome da receita'>
  </div>
</div>

<div class="item">
  <div>Imagem da receita</div>
  <div>
    <input type="url" name="image" placeholder='https://www.google.com'>
  </div>
</div>

<div class="item" id='ingredients'>
  <div>Ingredientes</div>
  <div class='ingredients'>
    <input type="text" name="ingredients[]" placeholder='Adicione cada ingrediente da receita'>
  </div>
</div>

<div class='buttons-add-del'>
  <button type='button' class='add-ingredient'>Adicionar novo ingrediente</button>
  <button type='button' class='delete-ingredient'>Excluir ingrediente</button>
</div>

<div class="item" id='preparation'>
  <div>Modo de preparo</div>
  <div class='preparation'>
    <input type="text" name="preparation[]" placeholder='Adicione passo a passo da receita'>
  </div>
</div>

<div class='buttons-add-del'>
  <button type='button' class='add-preparation'>Adicionar novo passo</button>
  <button type='button' class='delete-preparation'>Excluir passo</button>
</div>

<div class="item">
  <div>Informações adicionais</div>
  <div>
    <textarea name="information" spellcheck='true'></textarea>
  </div>
</div>

<script src="/js/fields.js"></script>