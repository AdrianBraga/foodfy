{% extends 'layouts/admin.njk' %}

{% block head %}
    <title>Foodfy | Administrador - Chef: {{chef.author}}</title>
{% endblock head %}

{% block content %}
  <div class="chef-title">
    <h1>Chef: {{chef.author}}</h1>
    <a href="/admin/chefs/{{chef.id}}/edit"><button>Editar chef</button></a>
  </div>

   <div class="chef-content">
    <img src="{{chef.avatar_url}}" alt="{{chef.author}}">
    <h1>{{chef.author}}</h1>
    {% if chef.total_recipes > 0 %}
      <p>{{chef.total_recipes}} receita(s)</p>
    {% else %}
      <p>Nenhuma receita cadastrada</p>
    {% endif %}
  </div>

  <div class="grid-recipes">
    {% for recipe in recipes %}
      <div class="card-recipe">
        <img src="{{recipe.image}}" alt="{{recipe.title}}">
        
        <div class="card-info">
          <h2>{{recipe.title}}</h2>
          <p>por {{chef.author}}</p>
          <span><a href="/admin/recipes/{{recipe.id}}">Visualizar</a></span>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock content %}