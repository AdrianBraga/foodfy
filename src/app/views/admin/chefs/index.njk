{% extends 'layouts/admin.njk' %}

{% block head %}
    <title>Foodfy | Administrador - Gerenciamento de chefs</title>
{% endblock head %}

{% block content %}
  <div class="list-chefs">
    <h1>Gerenciar chefs</h1>

    <div class="grid-chefs">
        {% for chef in chefs %}
          <div class="card-chef">
            <img src="{{chef.avatar_url}}" alt="{{chef.author}}">
            
            <div class="chef-info">
              <h2>{{chef.author}}</h2>
              <span><a href="/admin/chefs/{{chef.id}}">Visualizar</a></span>
            </div>
          </div>
        {% endfor %}
    </div>
  </div>
{% endblock content %}