<div class="item">
  <div>Nome do autor</div>
  <div>
   <select name="chef">
        <option selected disabled>Selecione um chef</option>
        {% for chef in chefOptions %}
          <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %} selected {% endif %}>{{chef.author}}</option>
        {% endfor %}
      </select>
  </div>
</div>

<div class="item">
  <div>Nome da receita</div>
  <div>
    <input type="text" name="title" placeholder='Nome da receita' value="{{recipe.title}}">
  </div>
</div>

<div class="item">
  <div>Imagem da receita</div>
  <div>
    <input type="url" name="image" placeholder='https://www.google.com' value="{{recipe.image}}">
  </div>
</div>

<div class="item" id='ingredients'>
  <div>Ingredientes</div>
  {% for recipe in recipe.ingredients %}
    <div class='ingredients'>
      <input type="text" name="ingredients[]" placeholder='Adicione cada ingrediente da receita' value="{{recipe}}"> 
    </div>

    {% else %}

    <div class='ingredients'>
      <input type="text" name="ingredients[]" placeholder='Adicione cada ingrediente da receita' value="{{recipe}}"> 
    </div>
  {% endfor %}
</div>

<div class='buttons-add-del'>
  <button type='button' class='add-ingredient'>Adicionar novo ingrediente</button>
  <button type='button' class='delete-ingredient'>Excluir ingrediente</button>
</div>

<div class="item" id='preparation'>
  <div>Modo de preparo</div>
  {% for recipe in recipe.preparation %}
    <div class='preparation'>
      <input type="text" name="preparation[]" placeholder='Adicione passo a passo da receita' value="{{recipe}}">
    </div>

    {% else %}

    <div class='preparation'>
      <input type="text" name="preparation[]" placeholder='Adicione passo a passo da receita' value="{{recipe}}">
    </div>
  {% endfor %}
</div>

<div class='buttons-add-del'>
  <button type='button' class='add-preparation'>Adicionar novo passo</button>
  <button type='button' class='delete-preparation'>Excluir passo</button>
</div>

<div class="item">
  <div>Informações adicionais</div>
  <div>
    <textarea style="resize: none;" name="information" spellcheck='true'>{{recipe.information}}</textarea>
  </div>
</div>

<script src="/js/fields.js"></script>